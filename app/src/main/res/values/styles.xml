<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget"></style>
    <style name="Widget.ProgressBar.CircularProgressBarGreen" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="progressColor">@color/circular_progress_default_progress_green</item>
        <item name="hasShadow">true</item>
        <item name="strokeWidth">25</item>
        <item name="titleColor">@color/circular_progress_default_title_green</item>
        <item name="subtitleColor">@color/circular_progress_default_subtitle_green</item>
    </style>
    <style name="Widget.ProgressBar.Holo.CircularProgressBarGreen" parent="Widget.ProgressBar.CircularProgressBarGreen">
        <item name="hasShadow">false</item>
        <item name="strokeWidth">10</item>
    </style>
